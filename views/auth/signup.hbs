<div id="signup">
  <h2>Sign up</h2>
  <form action="/signup" method="POST">
    <label for="input-first-name">First name:</label>
    <input type="text" id="input-first-name" name="firstname" placeholder="First name" />

    <label for="input-last-name">Last name:</label>
    <input type="text" id="input-last-name" name="lastname" placeholder="Last name" />

    <label for="input-email">Email:</label>
    <input type="email" id="input-email" name="email" placeholder="Your email" />

    <label for="input-password">Password:</label>
    <input type="password" name="password" id="input-password" placeholder="********" />

    <button type="submit">Create account</button>

    <p>Already have an account? <a href="/login">Log in</a> </p>
    
    {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>