<div class="container">
  <div class="row justify-content-md-center">
    <div class="col col-lg-2">
    </div>
    <div class="col-md-auto card-body">
      <div>
        <h3 class="profile-header">Create Account</h3>
      </div>

      <form action="/signup" method="POST">
        <div class="mb-3">
          <label for="input-first-name" class="form-label">First name</label>
          <input type="text" class="form-control" id="input-first-name" name="firstname" placeholder="First name" />
        </div>
        <div class="mb-3">
          <label for="input-last-name" class="form-label">Last name</label>
          <input type="text" class="form-control" id="input-last-name" name="lastname" placeholder="Last name" />
        </div>
        <div class="mb-3">
          <label for="input-email" class="form-label">Email address</label>
          <input type="email" class="form-control" id="input-email" name="email" aria-describedby="emailHelp"
            placeholder="Your email">
          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
          <label for="input-password" class="form-label">Password</label>
          <input type="password" class="form-control" name="password" id="input-password" placeholder="********">
        </div>

        <div class="container">
          <button type="submit" class="btn btn-primary rounded-0">Create account</button>
        </div>
        <p>Already have an account? <a href="/login">Log in</a> </p>

        <div class="profile-header">Or use one of the social options</div>

        <div id="image" class="d-flex justify-content-around">
          <a href="/auth/google"><img class="socials-image-size"
              src="https://pluspng.com/img-png/google-logo-png-open-2000.png" alt="google login"></a>
          <a href="https://www.facebook.com"><img class="socials-image-size"
              src="https://cdn4.iconfinder.com/data/icons/social-media-icons-the-circle-set/48/facebook_circle-512.png"
              alt="facebook login"></a>
          <a href="https://www.github.com"><img class="socials-image-size"
              src="https://image.flaticon.com/icons/svg/25/25231.svg" alt="github login"></a>
          <a href="/auth/linkedin"><img class="socials-image-size"
              src="https://cdn4.iconfinder.com/data/icons/social-media-icons-the-circle-set/48/linkedin_circle-512.png"
              alt="linkedin login"></a>
        </div>



        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}
      </form>
    </div>
    <div class="col col-lg-2">
    </div>
  </div>
