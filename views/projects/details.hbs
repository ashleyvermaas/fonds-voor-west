<h1>Project details</h1>

<div>
  <h4>{{name}}</h4>
  <p>{{date}}</p>
  <p>{{location}}</p>
  <p>{{description}}</p>
  <p>{{status}}</p>

  <a href="{{projectplanUrl}}">See project plan</a>


<h3>Location</h3>
    <div id="map"></div>
 
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC31u_Bo-GUcbpTMJQ2mo-xmPt7ZT2gYcI"></script>
    <script>
      function startMap() {
  const amsterdamWest = {
  	lat: 52.37534487676064,
  	lng: 4.863284933310403};
  const map = new google.maps.Map(
    document.getElementById('map'),
    {
      zoom: 13,
      center: amsterdamWest
    }
  );
}
 
startMap();
    </script>

  

  {{#if accountability}}
  <p>Accountability has been submitted</p>
  {{else}}
  <p>Please submit your accountability</p>
  {{/if}}

  <a href="/projects/{{_id}}/edit">Edit</a>
  <a href="/projects/{{_id}}/accountable">Accountability</a>
  <a href="/projects/{{_id}}/evaluate">Evaluate</a>
  <form action="/projects/{{_id}}/delete" method="POST"
    onclick="return confirm('Are you sure you want to delete this project?')">
    <button>Delete</button>
  </form>

</div>