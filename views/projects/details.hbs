<div class="container justify-content-center">

  <div class="card mx-auto" style="width: 80%;">
    <div class="card-body">
      <div class="profile-header">
        <h3>Project details</h3>
      </div>
      
      <div>
        <div class="row align-items-center">
          <div class="col">
            <div class="mb-3">
              <h5>Project name: {{name}}</h5>
              <p>Date: {{date}}</p>
              <p>Location: {{location}}</p>
              <p>Description: {{description}}</p>
              <p>Status: {{status}}</p>
            </div>
            <div class="mb-3">
              <a href="{{projectplanUrl}}">See project plan</a>
              <a href="{{costingUrl}}">See costing</a>
            </div>
          </div>

          <div class="col">
            {{#if project.projectImageUrl}}
            <img class="img-fluid project-image-size" src="{{project.projectImageUrl}}" alt="{{project.projectname}}">
            {{else}}
            <img class="img-fluid project-image-size"
              src="https://www.fondsvoorwest.nl/wp-content/uploads/2020/02/foto3-scaled.jpg" alt="Image placeholder">
            {{/if}}
          </div>

        </div>

        <div>
          {{#if accountability}}
          <p>Accountability has been submitted</p>
          {{else}}
          <p>Please submit your accountability</p>
          {{/if}}
        </div>
        <div class="d-flex justify-content-center">
          {{#if (ifIsApplicant user.role)}}
          <a href="/projects/{{_id}}/edit" class="btn btn-primary">Edit</a>
          <a href="/projects/{{_id}}/accountable" class="btn btn-secondary">Accountability</a>
          <form action="/projects/{{_id}}/delete" method="POST"
            onclick="return confirm('Are you sure you want to delete this project?')">
            <button class="btn btn-danger">Delete</button>
          </form>
          {{/if}}

          {{#if (ifIsCommittee user.role)}}
          <a href="/projects/{{_id}}/evaluate" class="btn btn-secondary">Evaluate</a>
          {{/if}}

          {{#if (ifIsAdmin user.role)}}
          <a href="/projects/{{_id}}/edit" class="btn btn-primary">Edit</a>
          <a href="/projects/{{_id}}/accountable" class="btn btn-secondary">Accountability</a>
          <a href="/projects/{{_id}}/evaluate" class="btn btn-secondary">Evaluate</a>
          <form action="/projects/{{_id}}/delete" method="POST"
            onclick="return confirm('Are you sure you want to delete this project?')">
            <button class="btn btn-danger">Delete</button>
          </form>
          {{/if}}
        </div>
      </div>
      <h4>Location</h4>
      <div id="floating-panel">
        <input id="address" type="textbox" value="{{location}}" />
        <input id="submit" type="button" value="View location" />
      </div>
      <div id="map"></div>


      {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
      {{/if}}
    </div>
  </div>
</div>
</div>


{{#if errorMessage}}
<p>{{errorMessage}}</p>
{{/if}}