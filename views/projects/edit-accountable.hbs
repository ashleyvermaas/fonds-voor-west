<div class="container justify-content-center">
  <div class="card border-0 mx-auto" style="width: 80%;">
    <div class="card-body">
      <div>
        <h3 class="profile-header"> Edit your accountability report</h3>
      </div>

      <div class="row align-items-center">
        <h4>Projectname: {{name}}</h4>


        <form action="/projects/{{_id}}/accountable/edit" method="POST">
          <label for="accountability-input">Accountability report:</label>
          <textarea class="form-control" name="accountability" id="accountability-input" cols="40" rows="4"></textarea>

          <p>Upload files: </p>

          <button class="btn btn-secondary rounded-0" type="submit">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
</div>


{{#if errorMessage}}
<p>{{errorMessage}}</p>
{{/if}}