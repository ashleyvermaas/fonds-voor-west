{{!-- Users list and change rolles --}}

<div class="container justify-content-center">

  <div class="card border-0 mx-auto" style="width: 80%;">
    <div class="card-body">
      <div>
        <h3 class="profile-header">Admin</h3>
      </div>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">User name</th>
              <th scope="col">Email</th>
              <th scope="col">Role</th>
              <th scope="col"></th>
              <th scope="col"></th>

            </tr>
          </thead>
          <tbody>
            {{#each users}}
            <tr>
              <th scope="row"> {{firstname}} {{lastname}}</th>
              <td>{{email}}</td>
              <td>
                <form action="/users/{{_id}}/edit" method="POST">
                  <select class="form-select" id="role" name="role" aria-label="Default select example">
                    <option selected>{{role}}</option>
                    <option value="COMMITTEE">COMMITTEE</option>
                    <option value="APPLICANT">APPLICANT</option>
                    <option value="ADMIN">ADMIN</option>
                  </select>
              <td> <button class="btn btn-primary rounded-0" type="submit">Save role</button>
              </td>
              <td>
                <form action="/users/{{_id}}/delete" method="POST"
                  onclick="return confirm('Are you sure you want to delete this user?')">

                  <button class="btn btn-danger rounded-0">Delete</button>
                </form>
              </td>
              </td>
            </tr>

            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

{{!-- Send e-mail --}}

<div class="container justify-content-center">

  <div class="card border-0 mx-auto" style="width: 80%;">
    <div class="card-body">
      <div>
        <h3 class="profile-header">Send a e-mail</h3>
      </div>
      <form action="/send-email" method="post">
        <label for="">Email</label>
        <input class="form-control" type="email" name="email" id="">
        <label for="">Subject</label>
        <input class="form-control" type="text" name="subject" id="">
        <label for="">Message</label>
        <textarea class="form-control" type="text" name="message" id=""></textarea>
        <button class="btn btn-primary rounded-0" type="submit">Send</button>
      </form>
    </div>
  </div>
</div>