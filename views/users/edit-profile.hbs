<h1>Edit profile</h1>

<form action="/user-profile/{{user._id}}/edit" method="POST" enctype="multipart/form-data">

  <label for="image-input">Profile image:</label>
  <input type="file" name="image" id="image-input" class="form-control-file" />
  <img src="{{user.imageUrl}}" alt="{{user.firstname}}">


  <label for="input-first-name">First name:</label>
  <input type="text" id="input-firstname" name="firstname" value="{{firstname}}" />

  <label for="input-last-name">Last name:</label>
  <input type="text" id="input-lastname" name="lastname" value="{{lastname}}" />

  <label for="input-email">Email:</label>
  <input type="email" id="input-email" name="email" value="{{email}}" />

  <button type="submit">Save changes</button>

  {{#if errorMessage}}
  <p class="error">{{errorMessage}}</p>
  {{/if}}
</form>