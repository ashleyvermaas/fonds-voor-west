<h1>Settings</h1>

 <form action="/settings" method="POST">
    <label for="input-first-name">First Name</label>
    <input type="text" id="input-firstname" name="firstname" value="{{user.firstname}}" />

    <label for="input-last-name">Last Name</label>
    <input type="text" id="input-lastname" name="lastname" value="{{user.lastname}}" />

    <label for="input-email">Email</label>
    <input type="email" id="input-email" name="email" value="{{user.email}}" />

    {{!-- <label for="input-password">Password</label>
    <input type="password" name="password" id="input-password" value="{{user.password}}" /> --}}

    <button type="submit">Save settings</button>
    
      {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
     {{/if}}
  </form>