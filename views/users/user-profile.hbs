{{#if user}}

<div>
  <h3 class="profile-header">My Profile</h3>
</div>
<div class="profile-container">
  <div class="profile-text">
    <h4>First name</h4>
    <p>{{user.firstname}}</p>
    <h4>Last name</h4>
    <p>{{user.lastname}}</p>
    <h4>Email</h4>
    <p>{{user.email}}</p>
  </div>

  <div class="profile-img">
    <img class="img-fluid profile-image-size" src="{{user.imageUrl}}" alt="{{user.firstname}}">
  </div>

</div>
<div class="profile-btn">
  <a class="btn btn-secondary rounded-0 profile-edit-btn" href="/user-profile/{{user._id}}/edit">Edit</a>
</div>

{{else}}
<p>Still no logged in user, sorry!</p>
{{/if}}